<h1 algin=center> Signup for alpha blog </h1>

<%= render '/shared/errors', obj: @user %>
<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@user, :html => {class:"form-horizontal", role:"form"}) do |f|%>
        <div class='form-group'>
            <div class='col-xs-2'>
                 <%= f.label :username %>
            </div>
            <div class='col-xs-8'>
                <%= f.text_field :username, class: "form-control", placeholder: "Enter user name", autofocus:true %></p>
            </div>
        </div>
        <div class='form-group'>
            <div class='col-xs-2'>
                <%= f.label :email %>
            </div>
            <div class='col-xs-8'>
                 <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
            </div>
        </div>
        <div class='form-group'>
            <div class='col-xs-2'>
                <%= f.label :password %>
            </div>
            <div class='col-xs-8'>
                 <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
            </div>
        </div>        
        <div class='form-group'>
            <div class='col-xs-8 col-xs-offset-2'>
                 <%= f.submit "Sign up",  class:"btn btn-primary btn-lg" %>
            </div>
        </div>
        <%end%>
        <div class='col-xs-4 col-xs-offset-4'>
        [ <%= link_to 'Cancel e volta para a pagina de artigos' ,articles_path %> ]
        </div>
    </div>
</div>
