<% if @article.errors.any?%>
<h2>Seguem os erros da aplicação</h2>
    <% @article.errors.full_messages.each do |msg| %>
    <ul>
        <li>
        <%=msg%>
        </li>
    </ul>
    <%end%>
<%end%>


<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@article, :html => {class:"form-horizontal", role:"form"}) do |f|%>
        <div class='form-group'>
            <div class='col-xs-2'>
                 <%= f.label :title %>
            </div>
            <div class='col-xs-8'>
                <%= f.text_field :title, class: "form-control", placeholder: "titulo do artigo", autofocus:true %></p>
            </div>
        </div>
        <div class='form-group'>
            <div class='col-xs-2'>
                <%= f.label :description %>
            </div>
            <div class='col-xs-8'>
                 <%= f.text_area :description, class: "form-control", placeholder: "body do artigo", rows:10 %>
            </div>
        </div>
        <div class='form-group'>
            <div class='col-xs-8 col-xs-offset-2'>
                 <%= f.submit  class:"btn btn-primary btn-lg" %>
            </div>
        </div>
        <%end%>
        <div class='col-xs-4 col-xs-offset-4'>
        [ <%= link_to 'Cancel e volta para a pagina de artigos' ,articles_path %> ]
        </div>
    </div>
</div>
